# =====================================================
# Configuration Les Jardins du Saguenay
# =====================================================
# Copiez ce fichier vers .env et remplissez les valeurs

# =====================================================
# Base de données PostgreSQL
# =====================================================
DATABASE_URL=postgresql://user:password@host:5432/database

# =====================================================
# Session
# =====================================================
SESSION_SECRET=votre-secret-de-session-securise-change-en-production
NODE_ENV=development

# =====================================================
# Configuration SMTP (Email)
# =====================================================
# Hôte du serveur SMTP
SMTP_HOST=smtp.votredomaine.com

# Port SMTP (587 pour TLS, 465 pour SSL)
SMTP_PORT=587

# true pour SSL (port 465), false pour TLS (port 587)
SMTP_SECURE=false

# Nom d'utilisateur SMTP (souvent l'adresse email)
SMTP_USER=votre-email@votredomaine.com

# Mot de passe SMTP
SMTP_PASS=votre-mot-de-passe

# Adresse d'expédition (optionnel, utilise SMTP_USER par défaut)
SMTP_FROM=noreply@lesjardinsdusaguenay.com

# =====================================================
# API Dadhri.NET
# =====================================================
# Clé API fournie par Dadhri
DADHRI_API_KEY=votre-cle-api-dadhri
